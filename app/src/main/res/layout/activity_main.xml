<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   android:background="#1f1f1d"
    tools:context=".MainActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/lineOne"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:background="@drawable/white_line"
        android:layout_centerHorizontal="true"/>
    <View
        android:id="@+id/lineTwo"
        android:layout_width="20dp"
        android:layout_height="100dp"
        android:background="@drawable/red_line"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/lineOne"
        />

    <View
        android:id="@+id/lineThree"
        android:layout_width="20dp"
        android:layout_height="240dp"
        android:background="@drawable/white_line"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/lineTwo"
        />

    <View
        android:id="@+id/lineFour"
        android:layout_width="20dp"
        android:layout_height="150dp"
        android:background="@drawable/red_line"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/lineThree"
        />

    <View
        android:id="@+id/lineFive"
        android:layout_width="20dp"
        android:layout_height="220dp"
        android:background="@drawable/green_line"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/lineFour"
        />

    <View
        android:id="@+id/lineSix"
        android:layout_width="20dp"
        android:layout_height="100dp"
        android:background="@drawable/white_line"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/lineFive"
        />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/baloo"
            android:shadowColor="#716464"
            android:text="SK"
            android:textColor="#fff"
            android:textSize="150dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tagLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/alex_brush"
            android:text="Android Developer"
            android:textColor="#fff"

            android:textSize="24sp" />

    </RelativeLayout>
    </LinearLayout>


</LinearLayout>